<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vikram.newpageupdated">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.SplashActivity"
            android:icon="@drawable/nit_logo"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.HomeActivity"
            android:label="@string/home"
            android:logo="@mipmap/ic_launcher"></activity>
        <activity android:name=".activity.LoginActivity"
            android:label="@string/login"
            android:logo="@mipmap/ic_launcher"
            android:parentActivityName=".activity.HomeActivity"></activity>
        <activity android:name=".activity.RegistrationActivity"
            android:label="@string/signup"
            android:logo="@mipmap/ic_launcher"
            android:parentActivityName=".activity.HomeActivity"></activity>
        <activity android:name=".activity.ProfileActivity"
            android:label="@string/profile"
            android:logo="@mipmap/ic_launcher"
            android:parentActivityName=".activity.RegistrationActivity"></activity>
    </application>
</manifest>